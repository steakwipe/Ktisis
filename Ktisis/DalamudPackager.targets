<Project>
    <Target Name="PackagePlugin"
            AfterTargets="Build"
            Condition="'$(Configuration)' == 'Release' or '$(Configuration)' == 'Debug'">
        <DalamudPackager ProjectDir="$(ProjectDir)"
                         OutputPath="$(OutputPath)"
                         AssemblyName="$(AssemblyName)"
                         VersionComponents="3"
                         MakeZip="true" />
    </Target>
</Project>